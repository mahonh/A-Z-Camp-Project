@model A_ZCamp.Models.SurveyQuestionOrdering

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Add</h2>
<h3>Add a survey question</h3>

@using (Html.BeginForm("Add", "Surveys", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.SurveyType.Survey)
        @Html.EnumDropDownListFor(model => model.SurveyType.Survey, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SurveyQuestion.QuestionType)
        @Html.EnumDropDownListFor(model => model.SurveyQuestion.QuestionType, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SurveyQuestion.Question)
        @Html.TextBoxFor(m => m.SurveyQuestion.Question, new { @class = "form-control", rows = 4 })
    </div>

    <input type="submit" class="btn btn-primary" value="Save" />
}

