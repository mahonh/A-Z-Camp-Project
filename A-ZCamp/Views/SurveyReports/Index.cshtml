@model A_ZCamp.Models.SurveyReports
@{
    ViewBag.Title = "Survey Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>This page will only be visible to Administrators.</h2>

<p><a class="btn btn-default" href="">Choose Report Data</a> &nbsp; 
    <a class="btn btn-default" href="">Choose Chart Type</a></p>

<h2>Survey Reports Example</h2>
<h3>Pre Survey</h3>
<table>
    <tr>
        <th>Email:</th>
        <th>What Do You Expect From Camp?</th>
    </tr>
    @foreach (var Pre in Model.PreSurveys)
    {
        <tr>
        <td>@Pre.Email &nbsp; &nbsp; &nbsp;</td>
        <td>@Pre.WhatDoYouExpect</td>
        </tr>
    }
</table>

<h3>Post Survey</h3>
<table>
    <tr>
        <th>Email:</th>
        <th>What Did You Think About Camp?</th>
    </tr>
    @foreach (var Post in Model.PostSurveys)
    {
        <tr>
        <td>@Post.Email &nbsp; &nbsp; &nbsp;</td>
        <td>@Post.WhatDidYouThink</td>
        </tr>
    }
</table>
